update-alternatives --install /usr/share/plymouth/themes/default.plymouth default.plymouth /usr/share/plymouth/themes/gecos/gecos.plymouth 100
update-alternatives --install /usr/share/plymouth/themes/text.plymouth text.plymouth /usr/share/plymouth/themes/gecos-text/gecos-text.plymouth 100
update-alternatives --set default.plymouth /usr/share/plymouth/themes/gecos/gecos.plymouth 
update-alternatives --set text.plymouth /usr/share/plymouth/themes/gecos-text/gecos-text.plymouth
update-initramfs -u
echo "FRAMEBUFFER=y" > /etc/initramfs-tools/conf.d/splash
